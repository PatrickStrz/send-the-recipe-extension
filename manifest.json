{   
    "version": "1.0",
    "manifest_version": 3,
    "name": "Send ingredients",
    "description": "sends ingredients from recipes",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "watermelon_emoji.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ],
    "permissions": ["declarativeContent", "activeTab"]

  }

